<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lostfound">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_round"
        android:supportsRtl="true"
        android:theme="@style/LostFoundTheme">

        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.RegisterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.PostActivity" />
        <activity android:name=".Activities.PostViewActivity" />
        <activity android:name=".Activities.MessageActivity" />
        <activity android:name=".Classes.Chat" />
        <activity android:name=".Activities.ProfileViewActivity" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.MessageViewActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>